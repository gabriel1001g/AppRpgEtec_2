<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRpgEtec.Views.Armas.ListagemView"
             Title="ListagemView"
             x:Name="listagemPage">

    <Shell.TitleView>
        <Button Command="{Binding NovaArmaCommand}" Text="Nova arma" HorizontalOptions="End" />
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="10">
            <ListView x:Name="listView" 
                      ItemsSource="{Binding Armas}" 
                      HasUnevenRows="True">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover" IsDestructive="True"
                                          Command="{Binding Path=BindingContext.RemoverArmaCommand, Source={x:Reference listagemPage}}"
                                          CommandParameter="{Binding .}">
                                </MenuItem>
                            </ViewCell.ContextActions>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Nome}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Dano}" FontSize="14" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>